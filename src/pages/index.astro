---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { SITE } from '@/consts'
import { portfolioService } from '@/services/PortfolioService'

const lang = 'es';

const [personalInfo, projects, latestPosts] = await Promise.all([
  portfolioService.getPersonalInfo(lang),
  portfolioService.getExperience(lang),
  getRecentPosts(2).catch(() => [])
]);

const formatDate = (dateString: string) => {
  if (!dateString || dateString === '') return 'Presente';
  const date = new Date(dateString + '-04');
  return new Intl.DateTimeFormat('es-ES', { month: 'long', year: 'numeric' }).format(date);
};

const getIconForProject = (name: string) => {
  const n = name.toLowerCase();
  if (n.includes('ea fc') || n.includes('tournament')) return 'lucide:gamepad-2';
  if (n.includes('chat') || n.includes('bot')) return 'lucide:bot';
  if (n.includes('bible') || n.includes('biblia')) return 'lucide:book-open';
  if (n.includes('news') || n.includes('noticias')) return 'lucide:newspaper';
  return 'lucide:layers';
};

const experience = projects.map(project => ({
  role: project.role,
  company: project.name,
  period: `${formatDate(project.date.start)} - ${project.date.end ? formatDate(project.date.end) : 'Presente'}`,
  current: !project.date.end,
  icon: getIconForProject(project.name),
  description: project.description
}));

const socialLinks = [
  { label: 'GitHub', href: personalInfo?.social.github ?? '', icon: 'lucide:github' },
  { label: 'LinkedIn', href: personalInfo?.social.linkedin ?? '', icon: 'lucide:linkedin' },
  { label: 'Email', href: personalInfo?.social.email ? `mailto:${personalInfo.social.email}` : '', icon: 'lucide:mail' }
].filter(link => link.href !== '');
---

<Layout class="max-w-3xl" transition:persist="home-layout">
  <PageHead slot="head" title={`${SITE.title} - Blog de Joan Matias`} fullTitle={true} />

  <section class="relative overflow-hidden rounded-xl border" style="min-height: clamp(280px, 40vh, 400px);">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-background to-background" aria-hidden="true"></div>
    
    <div class="relative z-10 p-8 md:p-12">
      <div class="flex flex-col gap-8">
        <div class="flex-1 min-w-0 space-y-6">
          <div class="space-y-4" style="min-height: clamp(120px, 20vh, 180px);">
            <h1 class="text-4xl sm:text-5xl md:text-6xl leading-[1.1] font-bold tracking-tight">
              Bienvenido a<br class="hidden sm:block" />
              <span class="text-primary">{SITE.title}</span>
            </h1>
            <p class="text-muted-foreground mt-4 leading-relaxed text-base md:text-lg max-w-xl">
              {SITE.description}
            </p>
          </div>
          
          <div class="flex flex-wrap items-center gap-3 pt-2">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg' })}>
              Leer el blog
              <Icon name="lucide:arrow-right" class="size-4" />
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
              Sobre mí
            </Link>
          </div>
          
          <div class="pt-2">
            <ul class="flex flex-wrap items-center gap-2">
              {socialLinks.map((link) => (
                <li>
                  <Link
                    href={link.href}
                    aria-label={link.label}
                    title={link.label}
                    class={buttonVariants({ variant: 'outline', size: 'icon' }) + ' backdrop-blur-sm bg-background/80'}
                    external={true}
                  >
                    <Icon name={link.icon} class="size-4" />
                  </Link>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Experiencia</h2>
      <p class="text-sm text-muted-foreground">Trayectoria profesional y logros</p>
    </div>
    
    <div class="space-y-6">
      {experience.map((exp, index) => (
        <div class="relative">
          {index < experience.length - 1 && (
            <div class="absolute left-[11px] top-8 bottom-0 w-px bg-border" aria-hidden="true"></div>
          )}
          
          <div class="flex gap-4">
            <div class={`relative flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center ring-4 ring-background z-10 bg-muted/50 text-muted-foreground"`}>
              <Icon name={exp.icon} class="size-3.5" />
            </div>
            
            <div class="flex-1 pb-2 min-w-0">
              <div class="mb-1">
                <h3 class="font-semibold text-lg leading-tight">{exp.role}</h3>
                <p class="text-sm text-muted-foreground">{exp.company} · {exp.period}</p>
              </div>
              <p class="text-sm text-muted-foreground/90 leading-relaxed mt-2">
                {exp.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="mt-12">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Habilidades y tecnologías</h2>
      <p class="text-sm text-muted-foreground">Tecnologías y herramientas con las que trabajo</p>
    </div>
    <ErrorBoundary client:load transition:persist="skills-error-boundary">
      <Skills client:load transition:persist="skills-section" />
    </ErrorBoundary>
  </section>

  {latestPosts.length > 0 && (
    <section class="mt-12">
      <div class="mb-6 flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-semibold mb-2">Lo último del blog</h2>
          <p class="text-sm text-muted-foreground">Perspectivas y artículos recientes</p>
        </div>
        <Link href="/blog" class={buttonVariants({ variant: 'ghost' }) + ' hidden sm:flex items-center gap-1.5'}>
          Ver todo
          <Icon name="lucide:arrow-right" class="size-4" />
        </Link>
      </div>
      
      <div class="space-y-2">
        {latestPosts.map((post) => (
          <article>
            <BlogCard entry={post} />
          </article>
        ))}
      </div>
    </section>
  )}

  <section class="mt-12 sm:mt-24">
    <div class="max-w-2xl mx-auto">
      <div class="mb-12 relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-border"></div>
        </div>
        <div class="relative flex justify-center">
          <div class="flex items-center gap-2.5 px-4 py-2 rounded-full bg-background border border-border shadow-sm">
            <span class="relative flex h-1.5 w-1.5">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-primary"></span>
            </span>
            <span class="text-xs font-medium text-muted-foreground uppercase tracking-wider">Disponible</span>
          </div>
        </div>
      </div>
      
      <div class="text-center space-y-6">
        <h2 class="text-4xl sm:text-5xl md:text-6xl font-semibold tracking-tight text-foreground leading-tight">
          Conectemos
        </h2>
        <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed max-w-xl mx-auto">
          ¿Tienes preguntas o quieres colaborar? ¡No dudes en contactarme!
        </p>
        <div class="pt-4">
          {personalInfo?.social.email && (
            <Link 
              href={`mailto:${personalInfo.social.email}`} 
              class="group inline-flex items-center gap-2.5 px-7 py-3.5 rounded-lg bg-foreground text-background text-base font-medium hover:bg-foreground/90 transition-all duration-200"
            >
              <Icon name="lucide:mail" class="size-4" />
              <span>Contactar</span>
              <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-1" />
            </Link>
          )}
        </div>
      </div>
    </div>
  </section>
</Layout>
