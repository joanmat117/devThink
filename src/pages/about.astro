---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { SITE } from '@/consts'
import { portfolioService } from '@/services/PortfolioService'

const lang = 'es';
const personalInfo = await portfolioService.getPersonalInfo(lang);

const name = personalInfo?.name || "Joan Matías";
const experienceYears = personalInfo?.exp || "1.5";
const profileImage = personalInfo?.image || "https://github.com/joanmat117.png";
const role = personalInfo?.role || "Desarrollador Web";

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": name,
  "url": SITE.href,
  "image": profileImage,
  "description": personalInfo?.professionalAboutMe || SITE.description,
  "jobTitle": role
}
---
<Layout class="max-w-3xl">
  <PageHead slot="head" title={`Sobre Mí | ${name}`} />
  
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  
  <div class="mb-10">
    <Breadcrumbs items={[{ label: 'Sobre Mí', icon: 'lucide:user' }]} />
  </div>

  <section class="flex flex-col gap-10">
    <div class="flex flex-col sm:flex-row sm:items-center gap-6">
      <div class="relative flex-shrink-0">
        <img 
          src={profileImage} 
          alt={name}
          width="100"
          height="100"
          class="rounded-full border border-border p-1 shadow-sm object-cover"
        />
      </div>
      <div class="space-y-1">
        <h1 class="text-3xl font-bold tracking-tight text-foreground">
          {name}
        </h1>
        <p class="text-base text-muted-foreground">
          {role} <span class="mx-2 text-border">•</span> {experienceYears} años de experiencia
        </p>
      </div>
    </div>

    <div class="space-y-10">
      <div class="space-y-6">
        {personalInfo?.largeAboutMe?.map((paragraph) => (
          <p class="text-base md:text-lg leading-relaxed text-muted-foreground [&>strong]:text-foreground [&>strong]:font-medium" set:html={paragraph} />
        )) || (
          <p class="text-base md:text-lg leading-relaxed text-muted-foreground">{personalInfo?.professionalAboutMe}</p>
        )}
      </div>

  
      <div class="space-y-4 pt-10 border-t border-border">
        <h2 class="text-xl font-semibold text-foreground tracking-tight">Sobre este espacio</h2>
        <p class="text-base text-muted-foreground leading-relaxed">
          Este blog es una extensión de mi proceso de aprendizaje. Aquí comparto soluciones técnicas y reflexiones sobre el desarrollo web actual, esperando que mi experiencia pueda servir de ayuda a otros desarrolladores.
        </p>
      </div>

      <div class="rounded-xl border border-border bg-muted/30 p-8 text-center sm:text-left">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-6">
          <div class="space-y-2">
            <h3 class="text-lg font-semibold text-foreground">¿Hablamos?</h3>
            <p class="text-sm text-muted-foreground">
              Disponible para proyectos y colaboraciones desde {personalInfo?.location}.
            </p>
          </div>
          
          <div class="flex flex-wrap justify-center gap-3">
            {personalInfo?.social?.email && (
              <a 
                href={`mailto:${personalInfo.social.email}`} 
                class="inline-flex items-center gap-2 bg-foreground text-background px-5 py-2.5 rounded-md text-sm font-medium hover:bg-foreground/90 transition-colors"
              >
                <Icon name="lucide:mail" class="size-4" />
                Email
              </a>
            )}
            <a 
              href={personalInfo?.social?.linkedin || "#"} 
              target="_blank"
              class="inline-flex items-center gap-2 border border-border bg-background px-5 py-2.5 rounded-md text-sm font-medium hover:bg-muted transition-colors"
            >
              <Icon name="lucide:linkedin" class="size-4" />
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
